<div class="modal-header">
  <button class="close">x</button>
  <h3>{{title}}</h3>
</div>
<div class="modal-body">
  <form class="form-horizontal">
    <div class="control-group">
      <label>Number</label>
      <input 
        class="card-number" 
        name="Number"
        value="{{model.CardNumber}}"
        type="text"></input>
    </div>
    <div class="control-group">
      <label>Card Type</label>
      <select 
        class="card-type" 
        name="Type"
      >
        <option value="">Select</option>
        <option value="story" {{isSelected}}>Story</option>
        <option value="tech" {{isSelected}}>Tech</option>
        <option value="bug" {{isSelected}}>Bug</option>
      </select>
    </div>
    <div class="control-group">
      <label>Card Title</label>
      <input 
        class="card-title"
        name="Title"
        value="{{model.Title}}"
        type="text"></input>
    </div>
    <div class="control-group">
      <label>Points</label>
        <select 
        class="card-points" 
        name="StoryPoints"
      >
        <option value="">Select</option>
        <option value="1" {{isSelected}}>1</option>
        <option value="3" {{isSelected}}>3</option>
        <option value="4" {{isSelected}}>5</option>
      </select>
    </div>
    <div class="control-group">
      <label>Note</label>
      <textarea 
        class="card-note"
        value="{{model.Notes}}"
        name="Notes"></textarea>
    </div>
    <div class="control-group">
      <label>Member</label>
      <select 
        class="member" 
        name="Collaborators"
      >
        <option value="">Select</option>
        <option value="c.buttery@nib.com.au">Chris</option>
        <option value="a.short@nib.com.au">Anthony</option>
        <option value="w.falconer@nib.com.au">Will</option>
        <option value="w.falconer@nib.com.au">Helle</option>
      </select>
    </div>
    <div class="control-group">
      <label>List</label>
      <select 
        class="column" 
        name="ColumnId"
      >
        <option value="">Select</option>
        {{#each columns}}
        <option value="{{Id}}" {{isSelected}}>{{Title}} </option>
        {{/each}}
      </select>
    </div>
    <button class="submit btn btn-primary">Save Card</button>
  </form>
</div>
<div class="modal-footer">
  <a href="#" class="btn close">Close</a>
</div>